{
    "compilerOptions": {
      "target": "esnext",
      "module": "ESNext",
      "moduleResolution": "node",
      "isolatedModules": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "declaration": false,
      "removeComments": true,
      "strict": true,
      "skipLibCheck": true
    },
    "references": [
      {
        "path": "./package/client/"
      }
    ],
    "exclude": ["package/**/node_modules","package/**/dist/**"],
  }